<p style="color: green"><%= notice %></p>

<% content_for :title, "Patients" %>

<h1>Patients</h1>
<table class="table table-striped table-bordered table-hover mt-5">
	<thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>DOB</th>
        <th>Age</th>
        <th>Phone</th>
        <th>Blood Type</th>
        <th>Allergies</th>
        <th>Symptoms</th>
        <th>Admission date</th>
        <th>Bill</th>
        <th></th>
      </tr>
    </thead>
<tbody id="patients">
  <% @patients.each do |patient| %>
  <tr>
  	<td><%= link_to patient.name , patient %></td>
  	<td><%= patient.gender %></td>
  	<td><%= patient.dob %></td>
  	<td><%= patient.age %></td>
  	<td><%= patient.phone %></td>
  	<td><%= patient.blood_type %></td>
  	<td><%= patient.allergies %></td>
  	<td><%= patient.symptom %></td>
  	<td><%= patient.created_at.to_date %></td>
  	<td><%= patient.bill %></td>
  	<td><%= link_to "Show", patient, class: "btn btn-outline-success btn-sm" %></td>
  </tr>
  <% end %>
</tbody>
</table>

<%= link_to "New patient", new_patient_path %>


